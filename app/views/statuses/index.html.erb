<div class = "page-header">
  <h1>Recent Status Updates & Weigh-Ins</h1> 
  <%= link_to "Post A New Weigh-In", new_status_path, class:"btn btn-success" %>
</div>

<% @statuses.each do |status| %>
<div class = "status">
    <strong><%= status.user.full_name %></strong>
    <p><em><%= status.weight %></em> lbs.</p>
    <p><%= status.content %></p>

  <div class="meta">
    <%= link_to "Updated " + time_ago_in_words(status.created_at) + " Ago" , status %>
    
    <span class="admin">
      <%= link_to "Edit", edit_status_path(status) %> |
      <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status?"} %>

    </span>  
  </div>
</div>

<% end %>